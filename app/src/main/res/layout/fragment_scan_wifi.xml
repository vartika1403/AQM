<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.aqm.ScanWifiFragment">

    <ImageView
        android:id="@+id/aqm_device_image"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/scan_aqm_wifi_button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/scan_aqm_wifi_button_background"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/scan_for_aqm_wifi"
        android:textColor="#ffffff"/>
</LinearLayout>
