<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.aqm.ConnectToRouterFragment">

    <TextView
        android:id="@+id/successfully_connected_text"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textColor="@color/colorBlue"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/successfully_connected" />

    <ImageView
        android:id="@+id/tick_mark_image"
        android:layout_below="@id/successfully_connected_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:src="@drawable/tick_mark_image"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <ImageView
        android:id="@+id/not_connected_image"
        android:layout_below="@id/successfully_connected_text"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_cancel"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</RelativeLayout>
