<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.aqm.ConnectToRouterFragment">

    <TextView
        android:id="@+id/router_name_text"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorNavyBlue"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="router name" />

    <EditText
        android:id="@+id/ssid_edit_text"
        android:hint="SSID"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/password_edit_text"
        android:hint="Password"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="SUBMIT"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        android:background="@drawable/scan_aqm_wifi_button_background"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</LinearLayout>
